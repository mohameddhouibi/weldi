<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RetroEntities.ParentActivity1"
    android:background="@drawable/backk"

    >

    <ImageView
        android:id="@+id/image1"
        android:layout_width="152dp"
        android:layout_height="93dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/genral">

    </ImageView>


    <LinearLayout
        android:id="@+id/form"
        android:layout_below="@+id/image1"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:alpha="0.6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="163dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:text="Question"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/question"
                android:layout_width="164dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Question"
                android:inputType="textPersonName"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="163dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:text="First Option"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/option1"
                android:layout_width="164dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="First Option"
                android:inputType="textPersonName"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="163dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:text="Second Option"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/option2"
                android:layout_width="164dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Second Option"
                android:inputType="textPersonName"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="163dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:text="Third Option"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/option3"
                android:layout_width="164dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Third Option"
                android:inputType="textPersonName"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="163dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:text="Fourth Option"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/option4"
                android:layout_width="164dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Fourth Option"
                android:inputType="textPersonName"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="163dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:text="Correct Answer"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/answer1"
                android:layout_width="164dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Correct Answer"
                android:inputType="textPersonName"
                android:textAlignment="center" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:divider="?android:dividerHorizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="163dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat"
                android:gravity="start"
                android:text="Category"
                android:textAlignment="viewStart"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/category"
                android:layout_width="164dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@null"
                android:ems="10"
                android:fontFamily="@font/montserrat"
                android:hint="Category"
                android:inputType="textPersonName"
                android:textAlignment="center" />
        </LinearLayout>



    </LinearLayout>
    <Button
        android:id="@+id/addquestion"
        android:layout_width="261dp"
        android:layout_below="@+id/form"
        android:layout_height="48dp"
        android:background="@drawable/rec_gradient"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/montserrat"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="#FFF"
        android:textSize="18sp" />
</RelativeLayout>