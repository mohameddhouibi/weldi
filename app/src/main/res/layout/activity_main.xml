<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@drawable/backk"

    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="568dp"
        android:layout_below="@+id/layouttoolbar"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/fundamentals"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/rec_gradient_fb"
                android:drawableTop="@drawable/computera"
                android:fontFamily="@font/montserrat"
                android:paddingTop="25dp"
                android:text="Quiz 1"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


            <Button
                android:id="@+id/sport"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/rec_gradient"
                android:drawableTop="@drawable/sports"
                android:fontFamily="@font/montserrat"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="Quiz 2"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/texti"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/recc"
                android:drawableTop="@drawable/books"
                android:fontFamily="@font/montserrat"
                android:paddingTop="25dp"
                android:text="See it"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


            <Button
                android:id="@+id/memory"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/recc1"
                android:drawableTop="@drawable/capital"
                android:fontFamily="@font/montserrat"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="Memory"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/coloring"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/recnex"
                android:drawableTop="@drawable/paint"
                android:fontFamily="@font/montserrat"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="Draw"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <Button
                android:id="@+id/pp"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/reec5"
                android:drawableTop="@drawable/pa"
                android:fontFamily="@font/montserrat"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="Parents"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/score"
                android:layout_width="0dp"
                android:layout_height="170dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/rec_gradient"
                android:drawableTop="@drawable/sc"
                android:fontFamily="@font/montserrat"
                android:foreground="?attr/selectableItemBackground"
                android:paddingTop="25dp"
                android:text="Score"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>


</RelativeLayout>